				<a href="javascript:void(0)" data-icon="discord" data-tooltip="click to copy" onclick="navigator.clipboard.writeText('12beesinatrenchcoat#7664')">@12beesinatrenchcoat#7664</a>
			</div>
		</div>
	</div>
	<div class="flow">
		<div>
			<h2>current project</h2>
			<p>I guess I'm working on something right now</p>
			<div>
				{% for item in collections.projects | reverse | limit(1) %}
					{% if item.data.status === "wip" or item.data.status === "on_hold" %}
						{% include "block.njk" %}
					{% endif %}
				{% endfor %}
			</div>
		</div>
		<div>
			<h2>latest blog posts</h2>
			<p>Sometimes I write things.</p>
			<div class="flow">
				{% for item in collections.posts | reverse | limit(3) %}
					{% include "block.njk" %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>